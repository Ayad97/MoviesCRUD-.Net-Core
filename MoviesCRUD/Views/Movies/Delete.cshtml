@model Movies
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <h2>Delete</h2>

    <h3>Are you sure you want to delete this?</h3>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <img src="data:image/*;base64,@(Convert.ToBase64String(Model.Poster))" alt="error"/>
        </div>
        <div class="offset-1 col-md-7" >
        <h3>@Model.Title</h3>
        <hr />
        <p>@Model.StoreLine</p>
        <p>@Model.Year</p>
        </div>
        
        
    </div>
   
    </div>
        

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color mt-4">
                <input type="submit" value="Delete" class="btn btn-outline-danger" /> 
                @Html.ActionLink("Back to List", "Index","" ,htmlAttributes:new{ @class="btn btn-outline-secondary" })
            </div>
        }


